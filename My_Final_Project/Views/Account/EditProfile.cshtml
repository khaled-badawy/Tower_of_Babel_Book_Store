@model My_Final_Project.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "_AdvLayout";
}
<style>
    .marg{
        width:80%;
        margin:0 auto;
    }
</style>
<section class="container-fluid marg mt-5">
<h2 class="fs-1 text-center text-uppercase text-secondary">Edit Profile</h2>
<hr class="mt-3 mb-5"/>
<div class="row">
    <div class="">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form asp-action="EditProfile">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" data-sb-validations="required" />
                        <label asp-for="UserName" class="control-label"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" />
                        <label asp-for="Email" class="control-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmEmail" class="form-control" />
                        <label asp-for="ConfirmEmail" class="control-label"></label>
                        <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Address" class="form-control" />
                        <label asp-for="Address" class="control-label"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Phone" class="form-control" />
                        <label asp-for="Phone" class="control-label"></label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Age" class="form-control" />
                        <label asp-for="Age" class="control-label"></label>
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <hr class="my-4"/>
                    <div class="form-floating mb-3 d-flex justify-content-center">
                        <input type="submit" value="Edit" class="btn btn-success fs-3 mb-3" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</section>






@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
