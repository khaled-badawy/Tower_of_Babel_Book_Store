@model My_Final_Project.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "ProfileInfo";
    Layout = "_AdvLayout";
}
<style>
    .marg {
        width: 80%;
        margin: 0 auto;
    }
    
</style>



<div class="container-fluid marg mt-5">
    <h2 class=" text-center fs-1 text-uppercase text-secondary">Profile Info</h2>
    <hr class="mt-3 mb-5" />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10 text-center">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10 text-center">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10 text-center">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10 text-center">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10 text-center">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
<hr class="mt-3 mb-5" />
</div>
<div class="d-flex justify-content-center">
    <a asp-action="EditProfile" class="btn btn-success fs-3 mb-5">Edit Profile</a>
</div>
