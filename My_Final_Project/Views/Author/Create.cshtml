@model Author

@{
    ViewData["Title"] = "Create";
    Layout = "_DemoLayout";
}
<link href="~/css/Edit.css" rel="stylesheet">
<h1>Create new author</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image</label>
                <input type="file" name="file" class="form-control" accept=".jpg,.png" />
            </div>
            <div class="form-group">
                <label asp-for="BriefHistory" class="control-label"></label>
                <textarea name="BriefHistory" rows="5" class="form-control"></textarea>
                <span asp-validation-for="BriefHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishCount" class="control-label"></label>
                <input asp-for="PublishCount" class="form-control" />
                <span asp-validation-for="PublishCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create new author" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexAdmin">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
