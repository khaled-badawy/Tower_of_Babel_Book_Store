@model List<Book>
@{
    ViewData["Title"] = "CategoryBooks";
    Layout = "_AdvLayout";
}

<style>
    .grad {
        background: linear-gradient(to right, #59ab6e,darkgreen);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .marg {
        width: 80%;
        margin: 0 auto;
    }
</style>

<section class="container-fluid marg pb-2">
    <h1 class="grad text-center pt-5">Explore @Model[0].Category.Name's Books</h1>
    <hr class="mt-3 mb-5"/>
    <partial name="_BookPartial"></partial>
    <hr class="mt-5 mb-5"/>
</section>

